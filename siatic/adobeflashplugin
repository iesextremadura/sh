#!/bin/bash
# SOURCE Bashstyling (https://github.com/iesextremadura/sh/blob/master/styles)
source <(curl -s https://raw.githubusercontent.com/iesextremadura/sh/master/styles)

h1 "Vamos a instalar el plugin de adobe para Ubuntu 14.04"

h1 "1. Vamos a comprobar que existe el repositorio en el sources.list"
if grep -Fxq "deb http://archive.canonical.com/ubuntu trusty partner" /etc/apt/sources.list
then
    # code if found
    info "Existe el repositorio. No hacemos nada."
else
    # code if not found
    info "No existe el repositorio en el sources.list. Procedemos a a침adirlo"
    echo "deb http://archive.canonical.com/ubuntu trusty partner" >> /etc/apt/sources.list
    apt-get update
fi

h1 "2. Actualizamos apt"
apt-get update

if "dpkg -l adobe-flashplugin"
then 
    info "Ya est치 instalado"
else
    info "No est치 instalado. Procedemos a la instalaci칩n"
    apt-get --yes --force-yes install adobe-flashplugin
fi


